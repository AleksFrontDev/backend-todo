generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt

  userId Int?
  user User? @relation(fields: [userId], references: [id])
}

model User {
  id Int     @id @default(autoincrement())
  email String @unique
  password String
  tasks Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
